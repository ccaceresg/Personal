<div id="map"></div>

<div id="basemaps-wrapper" class="leaflet-bar">
  <select id="basemaps">
    <option value="Topographic">Topographic</option>
	<option value="Imagery">Imagery</option>
    <option value="Streets">Streets</option>
    <option value="NationalGeographic">National Geographic</option>
    <option value="ShadedRelief">Shaded Relief</option>
  </select>
</div>

<script>
  var map = L.map('map').setView([2.83037, -75.354157], 10);
  var layer = L.esri.basemapLayer('Topographic').addTo(map);
  var layerLabels;
  
  function setBasemap (basemap) {
    if (layer) {
      map.removeLayer(layer);
    }

    layer = L.esri.basemapLayer(basemap);

    map.addLayer(layer);

    if (layerLabels) {
      map.removeLayer(layerLabels);
    }

    if (
      basemap === 'ShadedRelief' ||
      basemap === 'Oceans' ||
      basemap === 'Gray' ||
      basemap === 'DarkGray' ||
      basemap === 'Terrain'
    ) {
      layerLabels = L.esri.basemapLayer(basemap + 'Labels');
      map.addLayer(layerLabels);
    } else if (basemap.includes('Imagery')) {
      layerLabels = L.esri.basemapLayer('ImageryLabels');
      map.addLayer(layerLabels);
    }
  }

  document
    .querySelector('#basemaps')
    .addEventListener('change', function (e) {
      var basemap = e.target.value;
      setBasemap(basemap);
    });

  var markerOptions = {title: "PM001"}
  var marker = L.marker([2.565083, -75.596503], markerOptions)
  marker.bindPopup('<h1>PM001</h1><p>This is information about the marker</p><ul><li>Info 1</li><li>Info 2</li><li>Info3</li></ul>');
  marker.addTo(map);
  
  	var cities = L.layerGroup();
	L.marker([2.930, -75.286]).bindPopup('<h1>NEIVA').addTo(cities),
	L.marker([2.887, -75.433]).bindPopup('<h1>PALERMO').addTo(cities),
	L.marker([2.778, -75.258]).bindPopup('<h1>RIVERA').addTo(cities),
	L.marker([2.684, -75.325]).bindPopup('<h1>CAMPOALEGRE').addTo(cities),
	L.marker([2.665, -75.520]).bindPopup('<h1>YAGUARA').addTo(cities);
    cities.addTo(map);


	
  var area = L.polygon([
	[2.988107,-75.47688],
	[2.988107,-75.234175],
	[2.676683,-75.234175],
	[2.676683, -75.47688]])
  area.addTo(map).bindPopup("<h1>Area de estudio");

  var ciudades = {
    "Cabecera Municipio": cities, "Area Estudio": area
  };

	L.control.layers(ciudades, null, {position: 'bottomright', collapsed:false}).addTo(map);

  var popup = L.popup();
  function onMapClick(e) {
	popup
	.setLatLng(e.latlng)
	.setContent("Coordenadas " + e.latlng.toString())
	.openOn(map);
	}

	map.on('click', onMapClick);    

</script>

</body>
